<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="20dp"
    android:paddingLeft="16dp"
    android:layout_width="match_parent"
    android:paddingRight="16dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_descricao_despesa"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Despesa"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_mes_despesa"
        android:layout_below="@id/txt_descricao_despesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Janeiro"/>

    <TextView
        android:id="@+id/txt_valor_despesa"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt_descricao_despesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="R$: 150,00"/>

    <View
        android:id="@+id/view_divisor"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@id/txt_valor_despesa"
        android:background="@color/colorDivider"/>

</RelativeLayout>